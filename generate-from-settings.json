    /*** Syntax highlighting styles ***/
    "editor.tokenColorCustomizations": {
        "[Default Dark+]": {
            "textMateRules": [
                // Make comments dim and italic.
                {
                    "scope": "comment",
                    "settings": {
                        "foreground": "#ffffff66",
                        "fontStyle": "italic"
                    }
                },
                // Make block or doc comments brighter and italic.
                {
                    "scope": [
                        "string.quoted.docstring.multi",
                        "comment.block"
                    ],
                    "settings": {
                        "foreground": "#ffffffaa",
                        "fontStyle": "italic"
                    }
                },
                // Keep start and end of comment non-italic.
                {
                    "scope": [
                        "punctuation.definition.comment",
                        "punctuation.definition.string.begin",
                        "punctuation.definition.string.end"
                    ],
                    "settings": {
                        "fontStyle": ""
                    }
                },
                // Underline class definitions.
                {
                    "scope": [
                        "entity.name.type",
                        "entity.other.inherited-class",
                    ],
                    "settings": {
                        "fontStyle": "underline"
                    }
                }
            ]
        }
    }
